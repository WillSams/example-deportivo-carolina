{
  "name": "deportivocarolina",
  "version": "0.7.5",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "direnv allow && concurrently \"cd frontend && npm run dev\" \"cd backend && npm run dev\"",
    "deploy": "direnv allow && concurrently \"cd frontend && npm run deploy\" \"cd backend && npm run deploy\"",
    "lint": "eslint backend --ignore-pattern 'public/' && eslint frontend --ignore-pattern 'public/' --ignore-pattern 'dist/'",
    "lint-fix": "eslint backend --ignore-pattern 'public/' --fix && eslint frontend --ignore-pattern 'public/' --ignore-pattern 'dist/' --fix",
    "seed": "cd backend && npm run seed"
  },
  "devDependencies": {
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "concurrently": "^6.5.1"
  }
}